<Page
    x:Class="Aimer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Aimer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Viewbox>
        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="800" Height="1280">
            <StackPanel  Orientation="Vertical" BorderThickness="0,0,0,0" Visibility="Collapsed">
                <Button x:Name="red" Content="Blue" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="211" Height="90" Margin="0,20,0,0" Click="red_Click" IsEnabled="False"/>
                <Button x:Name="blue" Content="Blue" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="211" Height="90" Margin="0,110,0,0" Click="blue_Click" IsEnabled="False"/>
                <Button x:Name="yellow" Content="Yellow" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="211" Height="90" Margin="0,200,0,0" Click="green_Click" IsEnabled="False"/>
                <StackPanel Height="52" Orientation="Horizontal" Margin="30,30,10,30">
                    <TextBlock TextWrapping="Wrap" Text="Server:"  Width="68"/>
                    <TextBox TextWrapping="Wrap" Text="192.168.1.116" Margin="0,0,0,20" Width="218" x:Name="IP" />
                </StackPanel>

                <Button x:Name="connectbutton"  Content="Connect" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="52" Click="connectbutton_ClickAsync" />
                <Button Content="Connect Sucess" Margin="0,20,0,20" Width="218" x:Name="ConnectSucess" Visibility="Collapsed" HorizontalAlignment="Center"/>

            </StackPanel>
            <Frame x:Name="frame" />

        </Grid>
    </Viewbox>


</Page>
